{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "common": ["./common"],
      "components": ["./components"],
      "pages": ["./pages"],
      "scripts": ["./scripts"],
      "static": ["./static"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mjs", ".next/types/**/*.ts", ".storybook/**/*.ts"],
  "exclude": ["node_modules"]
}
